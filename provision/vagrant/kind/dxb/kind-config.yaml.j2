# kind-config.yaml.j2
kind: Cluster
apiVersion: kind.x-k8s.io/v1alpha4

networking:
  apiServerAddress: "0.0.0.0"
  apiServerPort: 6443          

nodes:
  - role: control-plane
    extraPortMappings:

      - containerPort: 32002  
        hostPort: 32002      
        protocol: TCP

      - containerPort: 31002  
        hostPort: 31002      
        protocol: TCP

      - containerPort: 31003  
        hostPort: 31003      
        protocol: TCP        

      - containerPort: 6443  
        hostPort: 7443 

    labels:
      topology.kubernetes.io/region: uae
      topology.kubernetes.io/zone: dxb-zone  

  - role: worker
    labels:
      topology.kubernetes.io/region: uae
      topology.kubernetes.io/zone: dxb-zone                    