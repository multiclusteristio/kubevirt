apiVersion: kind.x-k8s.io/v1alpha4

networking:
  apiServerAddress: "0.0.0.0"
  apiServerPort: 7443          

nodes:
  - role: control-plane
    extraPortMappings:

      - containerPort: 32002  
        hostPort: 32002      
        protocol: TCP

      - containerPort: 31002  
        hostPort: 31002      
        protocol: TCP

      - containerPort: 31003  
        hostPort: 31003      
        protocol: TCP        

      - containerPort: 7443  
        hostPort: 9443 